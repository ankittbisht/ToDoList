<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <%additem.forEach(item => { %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                <p>
                    <%=item.name %>
                </p>
            </div>
            <input type = "hidden" name ="listname" value="<%= listTitle %>"></input> 
        </form>
        <% }); %>
                <form action="/" method="post">
                    <input type="text" name="addtext" placeholder="New item" autocomplete="off">
                    <button type="submit" name="submit" value="<%= listTitle %>">+</button>
                </form>
    </div>
</body>
<%- include('footer'); -%>

</html>